@using Tarumt.WAM.Assignment.Extensions
@model PagedList<MovieShowtime>
@{
    ViewBag.Title = "Movie Showtimes - Admin Dashboard";
    Layout = "_AdminLayout";
    var previousPage = Model.CurrentPage - 1;
    var nextPage = Model.CurrentPage + 1;
}

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <caption class="p-5 text-lg font-semibold text-left text-gray-900 bg-white/50 dark:text-white dark:bg-gray-800">
            Movie Showtimes Table

            <p class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400">
                Browse a list of Movie Showtimes.
            </p>

            <div class="mt-3 flex flex-row justify-between">
                <div></div>

                <div>
                    <a asp-controller="AdminMovieShowtime" asp-action="Create" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                        New Movie Showtime
                    </a>
                </div>
            </div>
        </caption>
        <thead class="text-xs text-gray-700 uppercase bg-gray-50/80 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Final Price
                </th>
                <th scope="col" class="px-6 py-3">
                    Movie
                </th>
                <th scope="col" class="px-6 py-3">
                    Expired
                </th>
                <th scope="col" class="px-6 py-3">
                    Status
                </th>
                <th scope="col" class="px-6 py-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movieShowtime in Model)
            {
                <tr class='bg-white/50 border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600'>
                    <th scope='row' class='px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white'>
                        @movieShowtime.Name
                    </th>
                    <th scope='row' class='px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white'>
                        @("RM" + @movieShowtime.FinalPrice.ToRoundedString(2))
                    </th>
                    <th scope='row' class='px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white'>
                        @movieShowtime.Movie.Name (@movieShowtime.Movie.MovieVenue.Location)
                    </th>
                    <th scope='row' class='px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white'>
                        @(movieShowtime.IsExpired ? "EXPIRED" : "ACTIVE")
                    </th>
                    <th scope='row' class='px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white'>
                        @movieShowtime.Status
                    </th>
                    <td class='px-6 py-4 text-right'>
                        <a asp-controller="AdminMovieShowtime" asp-action="Detail" asp-route-id="@movieShowtime.Id" class='font-medium text-blue-600 dark:text-blue-500 hover:underline'>Details</a>
                    </td>
                </tr>
            }

            @if (Model.Count <= 0)
            {
                <tr class="bg-white/50 border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td colspan="6" class="px-6 py-4 whitespace-nowrap dark:text-white">
                        No movie showtimes found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav class="flex items-center bg-white/50 flex-column flex-wrap md:flex-row justify-center py-4" aria-label="Table navigation">
        <div class="flex flex-col items-center">
            <span class="text-sm text-gray-700 dark:text-gray-400">
                Showing Page
                <span class="font-semibold text-gray-900 dark:text-white">
                    @Model.CurrentPage
                </span>
                of
                <span class="font-semibold text-gray-900 dark:text-white">
                    @Model.TotalPages
                </span>
            </span>
            <div class="inline-flex mt-2 xs:mt-0">
                @{
                    if (previousPage <= 0)
                    {
                        <button class="cursor-not-allowed inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 rounded-l disabled:text-gray-400 disabled:cursor-not-allowed hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            <svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                            </svg>
                            Prev
                        </button>
                    }
                    else
                    {
                        <a asp-controller="AdminMovieShowtime" asp-action="Index" asp-route-pageNumber="@previousPage" asp-route-pageNumber="@previousPage" asp-route-pageSize="@Model.PageSize" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 rounded-l disabled:text-gray-400 disabled:cursor-not-allowed hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            <svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                            </svg>
                            Prev
                        </a>
                    }

                    if (nextPage > Model.TotalPages)
                    {
                        <button class="cursor-not-allowed inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 border-0 border-l border-gray-700 rounded-r disabled:text-gray-400 disabled:cursor-not-allowed hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            Next
                            <svg aria-hidden="true" class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    }
                    else
                    {
                        <a asp-controller="AdminMovieShowtime" asp-action="Index" asp-route-pageNumber="@nextPage" asp-route-pageNumber="@previousPage" asp-route-pageSize="@Model.PageSize" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-800 border-0 border-l border-gray-700 rounded-r disabled:text-gray-400 disabled:cursor-not-allowed hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            Next
                            <svg aria-hidden="true" class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    }
                }
            </div>
        </div>
    </nav>
</div>